{
    "name": "bnw/decimal-time",
    "description": "Easy-to-use tool for converting decimal values to time",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Diego Brocanelli",
            "email": "diego.brocanelli@buenonetworks.com.br"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "BNW\\": "src/"
        }
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^0.12.90",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts":{
        "test":"vendor/bin/phpunit tests/ --testdox",
        "analyse":"vendor/bin/phpstan analyse src --level=8",
        "psr":"phpcs --standard=PSR1,PSR12 src"
    }
}
